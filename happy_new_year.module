/**
 * Helper function.
 */
function _happy_new_year_isholidaytime() {
  $start = variable_get('happy_new_year_start') + 1;
  $end = variable_get('happy_new_year_end') + 1;

  if (date('m') == 12 && date('d') >= $start) {
    return TRUE;
  }
  elseif (date('m') == 1 && date('d') <= $end) {
    return TRUE;
  }
  else {
    return FALSE;
  }
}

/**
 * Implements hook_page_build().
 */
function happy_new_year_page_build(&$page) {
  if ((variable_get('happy_new_year_period')) && !_happy_new_year_isholidaytime()) {
    return;
  }

  $module_path = drupal_get_path('module', 'happy_new_year');

  if ((!path_is_admin(current_path()))) {
    $snowLibrary = '/js/snowstorm.js';
    $snowLibraryMin = '/js/snowstorm-min.js';
    if (variable_get('happy_new_year_minified', TRUE)) {
      $snowLibrary = $snowLibraryMin;
    }

    if (variable_get('happy_new_year_garland')) {
      $page['content']['#attached']['js'][] = [
        'type' => 'file',
        'data' => $module_path . '/js/garland.js',
      ];

      $page['content']['#attached']['css'][] = [
        'type' => 'file',
        'data' => $module_path . '/css/garland.css',
      ];

      if (variable_get('happy_new_year_garland_topfixed', TRUE)) {
        $page['content']['#attached']['css'][] = [
          'type' => 'file',
          'data' => $module_path . '/css/garland-fixed.css',
        ];
      }
      else {
        $page['content']['#attached']['css'][] = [
          'type' => 'file',
          'data' => $module_path . '/css/garland-absolute.css',
        ];
      }

      $page['content']['#attached']['js'][] = [
        'type' => 'setting',
        'data' => [
          'happy_new_year' => [
            'garlandCoreToolbar' => variable_get('happy_new_year_garland_coretoolbar'),
            'garlandBootstrapFixed' => variable_get('happy_new_year_garland_bootstrapfixed'),
            'garlandAdminMenu' => variable_get('happy_new_year_garland_adminmenu'),
            'garlandCustomMargin' => variable_get('happy_new_year_garland_custommargin'),
            'garlandCustomMarginText' => variable_get('happy_new_year_garland_custommargintext'),
          ],
        ],
      ];
    }

    if (variable_get('happy_new_year_snow')) {
      $page['content']['#attached']['js'][] = [
        'type' => 'file',
        'data' => $module_path . $snowLibrary,
      ];
      $page['content']['#attached']['js'][] = [
        'type' => 'file',
        'data' => $module_path . '/js/snow.js',
      ];
      $page['content']['#attached']['js'][] = [
        'type' => 'setting',
        'data' => [
          'happy_new_year' => [
            'snowColor' => variable_get('happy_new_year_snowcolor', '#FFFFFF'),
          ],
        ],
      ];
    }
  }
}

